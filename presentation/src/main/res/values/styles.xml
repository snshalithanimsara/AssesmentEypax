<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Default   Rounded Edit Text Style-->
    <style name="RoundedEditTextStyle">
        <item name="android:background">@drawable/bg_all_corner_44dp_border_color_cod_gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/colorBoulder</item>
        <item name="android:textColorHint">@color/colorCodGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <!--  Default  Rounded corner Button Style-->
    <style name="RoundedButtonStyle">
        <item name="android:background">@drawable/bg_all_corner_44dp_solid_coral_red</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>


