<?xml version="1.0" encoding="utf-8"?>

                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCoralRed"
        android:fitsSystemWindows="true" android:tag="layout/activity_splash_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_default_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/splash_lottie" />

        <TextView
            android:id="@+id/textView2"
            style="@style/ProximaNovaBoldColorWhite.size24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_news_wire_app"
            app:layout_constraintEnd_toEndOf="@+id/animation_default_view"
            app:layout_constraintStart_toStartOf="@+id/animation_default_view"
            app:layout_constraintTop_toBottomOf="@+id/animation_default_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>
         